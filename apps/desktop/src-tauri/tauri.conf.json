{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Monorepo Desktop",
  "version": "0.1.0",
  "identifier": "com.monorepo.desktop",
  "build": {
    "beforeDevCommand": "cd ../web && bun run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd ../web && bun run build",
    "frontendDist": "../web/.svelte-kit/output/client"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Monorepo Desktop",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
